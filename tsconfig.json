{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "esnext",
      "dom"
    ],
    "typeRoots": ["node_modules/@types"],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "**/node_modules",
    "**/webpack"
  ]
}
